alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias cddotfiles='cd ~/dotfiles'

function rl() {
	if hash xclip 2>/dev/null; then
		readlink -n -f $1 | xclip -selection c
	else
		readlink -n -f $1
	fi
}
function rl.() {
	if hash xclip 2>/dev/null; then
		readlink -n -f . | xclip -selection c
	else
		readlink -n -f .
	fi
}
